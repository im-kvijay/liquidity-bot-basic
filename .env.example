# Runtime mode configuration
BOT_MODE=dry_run
APP_CONFIG_FILE=config/app.toml

# Primary Solana RPC endpoint and fallbacks (comma separated)
RPC__PRIMARY_URL=https://api.mainnet-beta.solana.com
RPC__FALLBACK_URLS=https://solana-api.projectserum.com,https://api.mainnet-beta.solana.com
RPC__REQUEST_TIMEOUT=12
RPC__COMMITMENT=confirmed

# Wallet configuration
WALLET__KEYPAIR_PATH=/secure/path/to/solana-mainnet-keypair.json
WALLET__PUBLIC_KEY=
WALLET__PRIVATE_KEY=
WALLET__ALLOW_TEST_KEYPAIR=false

# Data source API keys
DATA_SOURCES__AXIOM_API_KEY=
DATA_SOURCES__PUMPFUN_API_KEY=
DATA_SOURCES__PRICE_ORACLE_URL=https://price.jup.ag/v4
DATA_SOURCES__SOLANA_TOKEN_LIST_URL=https://token-list-api.solana.com/metadata.json
DATA_SOURCES__DAMM_BASE_URL=https://damm-api.meteora.ag
DATA_SOURCES__DLMM_BASE_URL=https://dlmm-api.meteora.ag

# Token universe guardrails
TOKEN_UNIVERSE__MIN_LIQUIDITY_USD=25000
TOKEN_UNIVERSE__MIN_VOLUME_24H_USD=75000
TOKEN_UNIVERSE__MAX_HOLDER_CONCENTRATION_PCT=0.35
TOKEN_UNIVERSE__MAX_TOP10_HOLDER_PCT=0.7
TOKEN_UNIVERSE__REQUIRE_ORACLE_PRICE=true
TOKEN_UNIVERSE__DENY_FREEZE_AUTHORITY=true
TOKEN_UNIVERSE__DENY_MINTS=
TOKEN_UNIVERSE__DENY_CREATORS=
TOKEN_UNIVERSE__DENY_AUTHORITIES=
TOKEN_UNIVERSE__SUSPICIOUS_KEYWORDS=rug,honeypot,scam,exploit
TOKEN_UNIVERSE__MIN_DECIMALS=0
TOKEN_UNIVERSE__MAX_DECIMALS=12
TOKEN_UNIVERSE__AML_MIN_TOKEN_AGE_MINUTES=15
TOKEN_UNIVERSE__AML_MIN_HOLDER_COUNT=25
TOKEN_UNIVERSE__AML_MAX_SINGLE_HOLDER_PCT=0.75
TOKEN_UNIVERSE__AML_SANCTIONED_ACCOUNTS=

# Router and risk thresholds
ROUTER__SLIPPAGE_SAFETY_BPS=40
RISK__MAX_GLOBAL_NOTIONAL_USD=150000
RISK__DAILY_LOSS_LIMIT_USD=7500
CIRCUIT_BREAKERS__MAX_DRAWDOWN_PCT=0.2

# Monitoring and observability
MONITORING__LOG_LEVEL=INFO
MONITORING__SLACK_WEBHOOK_URL=
MONITORING__SENTRY_DSN=
MONITORING__SENTRY_ENVIRONMENT=
MONITORING__ENABLE_PROMETHEUS=true
MONITORING__METRICS_PORT=9100
MONITORING__WEBHOOK_URLS=
MONITORING__ALERT_THROTTLE_SECONDS=60
MONITORING__RISK_DISCLAIMER=Trading digital assets involves significant risk. Historical performance is not indicative of future results.

# Dashboard options
DASHBOARD__HOST=0.0.0.0
DASHBOARD__PORT=8080
DASHBOARD__AUTH_MODE=read_only
DASHBOARD__ALLOWED_ORIGINS=*
DASHBOARD__READ_ONLY_TOKEN=

# Event bus
EVENT_BUS__ENABLED=true
EVENT_BUS__MAX_QUEUE_SIZE=2048

# Storage
STORAGE__DATABASE_PATH=./state.sqlite3
STORAGE__METRICS_SNAPSHOT_PATH=./metrics_snapshots

# Strategy overrides
STRATEGY__MAX_POSITIONS=5
STRATEGY__ALLOCATION_PER_POSITION=500
STRATEGY__PRIORITY_FEE_LAMPORTS=5000

# Mode specific overrides (optional)
MODE__DRY_RUN_SEED=0
MODE__PERSIST_DRY_RUN_STATE=true
